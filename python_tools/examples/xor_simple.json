      "leak_rate": 0.95,
      "refractory_period_us": 1000,
      "description": "Hidden layer - detects single input active"
    },
    {
      "layer_id": 2,
      "layer_type": "output",
      "neuron_count": 1,
      "neuron_ids": [4, 4],
      "threshold": 1.8,
      "leak_rate": 0.95,
      "refractory_period_us": 2000,
      "description": "Output neuron"
    }
  ],
  "connections": [
    {
      "source_neuron": 0,
      "target_neuron": 2,
      "weight": 2.0,
      "delay_us": 1000,
