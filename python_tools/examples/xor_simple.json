    },
    {
      "source_neuron": 1,
      "target_neuron": 2,
      "weight": 2.0,
      "delay_us": 1000,
      "description": "B excites hidden neuron 2"
    },
    {
      "source_neuron": 0,
      "target_neuron": 3,
      "weight": -3.0,
      "delay_us": 500,
